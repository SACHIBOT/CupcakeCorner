<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.SpecialRequestsActivity">

    <ImageView
        android:id="@+id/business_image"
        android:layout_width="350dp"
        android:layout_height="200dp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:src="@drawable/cupcakeconer"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/about_text"
        android:layout_width="350dp"
        android:layout_height="131dp"
        android:layout_margin="16dp"
        android:background="@drawable/order_item_background"
        android:padding="16dp"
        android:text="Welcome to Cupcake Corner, your favorite cupcake bakery. We specialize in delicious and freshly baked cupcakes made with the finest ingredients. Come visit us and indulge in our sweet treats!"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/business_image" />

    <TextView
        android:id="@+id/owner_name"
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:layout_margin="16dp"
        android:background="@drawable/order_item_background"
        android:padding="16dp"
        android:text="Owner : Lakshitha Fernando"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/about_text" />

    <TextView
        android:id="@+id/location"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="Location : No. 12 , Athor Lane, Moratuwa"
        android:textSize="16sp"
        android:padding="16dp"
        android:background="@drawable/order_item_background"
        app:layout_constraintTop_toBottomOf="@id/owner_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/contact_methods"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="Contact : +94 77 123 4567\nEmail : info@cupcakecorner.com"
        android:textSize="16sp"
        android:padding="16dp"
        android:background="@drawable/order_item_background"
        app:layout_constraintTop_toBottomOf="@id/location"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/social_media"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="Enjoy your favorite cupcakes with us!"
        android:textSize="20sp"
        android:fontFamily="@font/berkshire_swash"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/contact_methods"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
