<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    android:background="@drawable/order_item_background"
    android:padding="10dp">

    <TextView
        android:id="@+id/lbl_category_name"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:text="Category Name : "
        android:layout_marginEnd="16dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/text_category_name"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_category_name"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:text="Category Name"
        app:layout_constraintStart_toEndOf="@+id/lbl_category_name"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/lbl_category_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Category Price : "
        android:layout_marginEnd="16dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/text_category_price"
        app:layout_constraintTop_toBottomOf="@id/lbl_category_name" />

    <TextView
        android:id="@+id/text_category_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Category Price"
        app:layout_constraintStart_toEndOf="@+id/lbl_category_price"
        app:layout_constraintTop_toBottomOf="@id/text_category_name" />

    <Button
        android:id="@+id/button_update_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="76dp"
        android:layout_marginTop="8dp"
        android:text="Update"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_category_price" />

    <Button
        android:id="@+id/button_delete_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Delete"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.363"
        app:layout_constraintStart_toEndOf="@+id/button_update_category"
        app:layout_constraintTop_toBottomOf="@id/text_category_price" />
</androidx.constraintlayout.widget.ConstraintLayout>
